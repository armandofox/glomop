1.1
log
@*** empty log message ***
@
text
@ALLTEX = $(wildcard *.tex)
ALLDVI = $(ALLTEX:.tex=.dvi)
ALLPS = $(ALLTEX:.tex=.ps)

all: $(ALLDVI) $(ALLPS)

.SUFFIXES: .pic .tex .ps .dvi

.pic.tex:
	gpic -t $< > $@@

.dvi.ps:
	dvips -t landscape -o $@@ $<

.tex.dvi: .tex
	latex $<

clean:
	-rm -f *.{aux,dvi,log}

veryclean: clean
	-rm -f *.ps
@
